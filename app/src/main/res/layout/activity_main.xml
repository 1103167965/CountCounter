<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="#1C1414"
        android:stretchColumns="*"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#7A7373">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:background="#FFFFFF">

                <ImageView
                    android:id="@+id/banner10"
                    android:layout_width="24dp"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="@+id/button3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/button3" />

                <ImageView
                    android:id="@+id/banner7"
                    android:layout_width="24dp"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toTopOf="@+id/banner3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/banner2" />

                <ImageView
                    android:id="@+id/banner"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team A"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/banner" />

                <ImageView
                    android:id="@+id/banner1"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#231E1E"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/banner1" />

                <ImageView
                    android:id="@+id/banner2"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <ImageView
                    android:id="@+id/banner5"
                    android:layout_width="24dp"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="@+id/button2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/button2" />

                <ImageView
                    android:id="@+id/banner9"
                    android:layout_width="24dp"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="@+id/button3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/banner4" />

                <ImageView
                    android:id="@+id/banner8"
                    android:layout_width="24dp"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toTopOf="@+id/banner3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/banner2" />

                <ImageView
                    android:id="@+id/banner6"
                    android:layout_width="24dp"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="@+id/button2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/button2" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#FF9800"
                    android:text="+3 POINTS"
                    app:layout_constraintEnd_toStartOf="@+id/banner7"
                    app:layout_constraintStart_toEndOf="@+id/banner8"
                    app:layout_constraintTop_toBottomOf="@+id/banner2"
                    android:tag="3"
                    android:onClick="left"/>

                <ImageView
                    android:id="@+id/banner3"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#FF9800"
                    android:text="+2 POINTS"
                    app:layout_constraintEnd_toStartOf="@+id/banner6"
                    app:layout_constraintStart_toEndOf="@+id/banner5"
                    app:layout_constraintTop_toBottomOf="@+id/banner3"
                    android:tag="2"
                    android:onClick="left"/>

                <ImageView
                    android:id="@+id/banner4"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button2" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#FF9800"
                    android:text="FREE THROW"
                    app:layout_constraintEnd_toStartOf="@+id/banner10"
                    app:layout_constraintStart_toEndOf="@+id/banner9"
                    app:layout_constraintTop_toBottomOf="@+id/banner4"
                    android:tag="1"
                    android:onClick="left"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="#FFFFFF">

                <ImageView
                    android:id="@+id/bannern10"
                    android:layout_width="24dp"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="@+id/buttonn3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/buttonn3" />

                <ImageView
                    android:id="@+id/bannern7"
                    android:layout_width="24dp"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toTopOf="@+id/bannern3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bannern2" />

                <ImageView
                    android:id="@+id/bannern"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewn7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team B"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bannern" />

                <ImageView
                    android:id="@+id/bannern1"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewn7" />

                <TextView
                    android:id="@+id/textViewn8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#090808"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bannern1" />

                <ImageView
                    android:id="@+id/bannern2"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewn8" />

                <ImageView
                    android:id="@+id/bannern5"
                    android:layout_width="24dp"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="@+id/buttonn2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/buttonn2" />

                <ImageView
                    android:id="@+id/bannern9"
                    android:layout_width="24dp"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="@+id/buttonn3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bannern4" />

                <ImageView
                    android:id="@+id/bannern8"
                    android:layout_width="24dp"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toTopOf="@+id/bannern3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bannern2" />

                <ImageView
                    android:id="@+id/bannern6"
                    android:layout_width="24dp"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="@+id/buttonn2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/buttonn2" />

                <Button
                    android:id="@+id/buttonn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#FF9800"
                    android:text="+3 POINTS"
                    app:layout_constraintEnd_toStartOf="@+id/bannern7"
                    app:layout_constraintStart_toEndOf="@+id/bannern8"
                    app:layout_constraintTop_toBottomOf="@+id/bannern2"
                    android:tag="3"
                    android:onClick="right"/>

                <ImageView
                    android:id="@+id/bannern3"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/buttonn" />

                <Button
                    android:id="@+id/buttonn2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#FF9800"
                    android:text="+2 POINTS"
                    app:layout_constraintEnd_toStartOf="@+id/bannern6"
                    app:layout_constraintStart_toEndOf="@+id/bannern5"
                    app:layout_constraintTop_toBottomOf="@+id/bannern3"
                    android:tag="2"
                    android:onClick="right"/>

                <ImageView
                    android:id="@+id/bannern4"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/buttonn2" />

                <Button
                    android:id="@+id/buttonn3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#FF9800"
                    android:text="FREE THROW"
                    app:layout_constraintEnd_toStartOf="@+id/bannern10"
                    app:layout_constraintStart_toEndOf="@+id/bannern9"
                    app:layout_constraintTop_toBottomOf="@+id/bannern4"
                    android:tag="1"
                    android:onClick="right"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/bannero"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF9800"
        android:text="RESET"
        app:layout_constraintBottom_toTopOf="@+id/bannero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="reset"/>

</androidx.constraintlayout.widget.ConstraintLayout>